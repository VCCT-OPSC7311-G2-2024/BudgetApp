<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Home Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_marginLeft="-13dp"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!-- com.example.opsc7312.api.Budget Header and Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/lblBudgetHeader"
            android:layout_width="192dp"
            android:layout_height="54dp"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:text="BUDGET"
            android:textColor="#000000"
            android:textSize="44sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="80dp"
            android:layout_marginLeft="60dp"
            android:layout_height="80dp"
            android:src="@drawable/budget" />
    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Create a com.example.opsc7312.api.Budget Category Text -->
    <TextView
        android:id="@+id/lblCreateBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CREATE A BUDGET CATEGORY"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Category Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORY"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txtCategory"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/edit_text_background"
            android:hint="  Enter Category" />
    </LinearLayout>

    <!-- Amount Budgeted Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT BUDGETED"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txtAmountBudgeted"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/edit_text_background"
            android:hint="  Enter Budgeted Amount" />
    </LinearLayout>

    <!-- Spinner for com.example.opsc7312.api.Account Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT ACCOUNT"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerAccounts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background" />
    </LinearLayout>

    <!-- Create Button -->
    <Button
        android:id="@+id/btnBudgetCreate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button_background"
        android:gravity="center"
        android:text="CREATE"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Footer Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/lblHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELP"
            android:textColor="#4CAF50"
            android:textSize="17sp"
            android:onClick="onHelpClick"
            android:layout_marginRight="200dp" />

        <TextView
            android:id="@+id/lblContactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT US"
            android:textColor="#4CAF50"
            android:textSize="17sp"
            android:onClick="onContactClick"
            android:layout_marginEnd="20dp" />
    </LinearLayout>
</LinearLayout>
