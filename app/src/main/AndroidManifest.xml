<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    \
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OPSC7312"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OPSC7312">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity
            android:name=".SignUpActivity"
            android:exported="true" />

        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <activity
            android:name=".BankActivity"
            android:exported="true" />

        <activity
            android:name=".BankCreateActivity"
            android:exported="true" />
        <activity
            android:name=".BankDeleteActivity"
            android:exported="true" />
        <activity
            android:name=".BankEditActivity"
            android:exported="true" />

        <activity
            android:name=".BudgetActivity"
            android:exported="true" />

        <activity
            android:name=".BudgetCreateActivity"
            android:exported="true" />

        <activity
            android:name=".BudgetDeleteActivity"
            android:exported="true" />

        <activity
            android:name=".BudgetEditActivity"
            android:exported="true" />

        <activity
            android:name=".SavingsActivity"
            android:exported="true" />

        <activity
            android:name=".SavingsCreateActivity"
            android:exported="true" />

        <activity
            android:name=".SavingsDeleteActivity"
            android:exported="true" />

        <activity
            android:name=".SavingsEditActivity"
            android:exported="true" />

        <activity
            android:name=".SettingsActivity"
            android:exported="true" />

        <receiver android:name=".NetworkReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>